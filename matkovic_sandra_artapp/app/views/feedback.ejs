<!DOCTYPE html>
<html>
  <head><% include partials/template/head.ejs %></head>
  <body id="<%= pageID %>">
    <% include partials/template/header.ejs %>
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <h1 class="comments-form-title">Leave A Comment</h1>
          <form class="comments-form">
            <div class="form-group">
              <label for="comments-form-name">What's your name?</label>
              <input type="text" class="form-control" id="comments-form-name" placeholder="Enter your name">
            </div>

            <div class="form-group">
              <label for="comments-form-title">Description</label>
              <input type="text" class="form-control" id="comments-form-title" placeholder="Description of your message">
            </div>

            <div class="form-group">
                <label for="comments-form-message">Message</label>
                <textarea type="text" placeholder="Enter message, then hit send"  class="form-control" id="comments-form-message" rows="6"></textarea>
            </div>
            <button type="submit" class="btn btn-default pull-right">Send</button>
          </form>
        </div><!-- primary -->
        <aside class="col-sm-8">
          <div class="maincontent comments">
              <h2 class="article-title">Comments</h2>
              <div class="comments-messages"></div>
          </div>
        </aside><!-- secondary -->
      </div>
    </div><!-- container -->
    <% include partials/template/jsdefaults.ejs %>
  </body>
</html>
